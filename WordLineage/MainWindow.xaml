<Window x:Class="WordLineage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Word Lineage" Width="600" Height="800" >

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Delete" Executed="DeleteCommand_Executed" CanExecute="DeleteCommand_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.New" Executed="NewCommand_Executed" CanExecute="NewCommand_CanExecute"/>
    </Window.CommandBindings>
    
    <!-- Grid SetUp -->
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!-- File/Options Bar -->
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top" Background="Gray" Padding="5" >
                <MenuItem Header="Node Controls">
                    <MenuItem Header="Delete Selected Node" Command="Delete"/>
                    <MenuItem Header="Add New Node" Command="New"/>
                    <MenuItem Header="Open Node Editor" x:Name="EditNodeMenuBtn"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <!-- *** Family Panel (Left) *** -->
        <!-- Name of Family -->
        <TextBlock Grid.Row="1" x:Name="FamilyName" Text="Family Name"
                   Style="{StaticResource NodeTitleTextStyle}"/>
        
        <!-- Family Display -->
        <Border Grid.Row="2" Padding="10,0,10,20">
            <ListView x:Name="FamilyDisplay" SelectionChanged="FamilyDisplay_SelectionChanged">
                <ListView.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource NodeDisplayTextStyle}"/>
                </ListView.Resources>
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete Node" Command="Delete"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Border>

        <!-- *** Node Panel (Right) *** -->
        <!-- Name of Node -->
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="NodeNameDisplay"
                   Style="{StaticResource NodeTitleTextStyle}"
                   Text="Node Name" TextWrapping="Wrap"/>
        
        <!-- Node Details -->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="2">
            <StackPanel.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource NodeDisplayTextStyle}"/>
            </StackPanel.Resources>

            <!--
            <TextBlock Text="Definition" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <ListView x:Name="NodeDefinitionDisplay" Margin="20,5,30,5">
            </ListView>
            
            <TextBlock Text="Description" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <TextBlock x:Name="NodeDescriptionDisplay" Margin="20,5,30,10">
                Sample text description.
            </TextBlock>
            
            <TextBlock Text="Tags" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <ListView x:Name="NodeTagDisplay" Margin="20,5,30,5">
            </ListView>
            -->


            <TextBlock Text="Parents" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <ListView x:Name="lsv_NodeParentsDisplay" Margin="20,5,30,5">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete Parent" Command="Delete"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>

            <TextBlock Text="Children" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <ListView x:Name="lsv_NodeChildrenDisplay" Margin="20,5,30,5">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete Child" Command="Delete"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
            
            <!-- Add New Node Popup Menu -->
            <Popup x:Name="pop_AddNode" IsOpen="False" MinHeight="50" MinWidth="200"
                   Placement="Center">
                <Border BorderBrush="#FF5B5858" BorderThickness="2" Background="LightGray">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal" Margin="5" >
                            <TextBlock Text="Node Name: " FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
                            <TextBox x:Name="tbx_NewNodeName" MinHeight="16" MinWidth="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button Margin="5" Click="Btn_NewNode_Click">Add Node</Button>
                            <Button Margin="5" x:Name="Btn_AddEditNode" Click="Btn_NewNode_Click">Add Node and Edit</Button>
                            <Button Margin="5" Click="Btn_CancelAddNode_Click">Cancel</Button>
                        </StackPanel>
                        
                    </StackPanel>
                </Border>
            </Popup>
            

            <!-- Edit Node Popup Menu -->
            <Popup x:Name="pop_ModifyNode" IsOpen="False" MinHeight="200" MinWidth="200"
                   Placement="Center">
                <Border BorderBrush="#FF5B5858" BorderThickness="2" Background="LightGray">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock x:Name="tbk_NodeInEditing" Text="" HorizontalAlignment="Center"
                                   FontSize="20" FontFamily="Candara"/>
                        <TextBlock Text="Modify Parents: " FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <ComboBox x:Name="Cbx_Parents" MinHeight="16" MinWidth="150">
                            </ComboBox>
                            <Button x:Name="Btn_AddParent" Click="Btn_AddParent_Click">
                                Add Parent
                            </Button>
                        </StackPanel>

                        <TextBlock Text="Modify Children: " FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="Cbx_Children" MinHeight="16" MinWidth="150"/>
                            <Button x:Name="Btn_AddChild" Click="Btn_AddChild_Click">
                                Add Child
                            </Button>
                        </StackPanel>

                        <Button x:Name="Btn_CloseEdits" Click="Btn_CloseEdits_Click">
                            Finish Edits and Close
                        </Button>

                    </StackPanel>
                </Border>
            </Popup>
            
        </StackPanel>



    </Grid>
</Window>
